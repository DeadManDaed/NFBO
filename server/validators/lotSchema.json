{
  "type": "object",
  "required": ["categorie", "description", "prix_ref", "unites_admises", "criteres_admission"],
  "properties": {
    "categorie": {
      "type": "string",
      "enum": [
        "frais", 
        "secs", 
        "huiles_liquides", 
        "produits_foret", 
        "manufactures_alim", 
        "manufactures_non_alim", 
        "sensibles"
      ]
    },
    "description": { "type": "string", "minLength": 3, "maxLength": 100 },
    "prix_ref": { "type": "number", "minimum": 0 },
    "unites_admises": {
      "type": "array",
      "minItems": 1,
      "items": { 
        "type": "string", 
        "enum": ["kg", "gr", "litres", "unites", "sacs", "caisses", "bottes", "plateaux"] 
      }
    },
    "criteres_admission": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "critere", "obligatoire"],
        "properties": {
          "type": { "type": "string", "enum": ["standard", "personnalise", "notes"] },
          "critere": { "type": "string", "minLength": 1 },
          "obligatoire": { "type": "boolean" }
        }
      }
    },
    "notes": { "type": "string" }
  },
  "additionalProperties": false
}
