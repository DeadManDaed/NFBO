{
  "$id": "https://example.com/schemas/definition",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DefinitionLot",
  "type": "object",
  "additionalProperties": false,
  "required": ["categorie", "description", "prix_ref"],
  "properties": {
    "categorie": { "type": "string", "minLength": 1 },
    "description": { "type": "string", "minLength": 1 },
    "prix_ref": { "type": "number", "minimum": 0 },
    "unites_admises": { "type": "array", "items": { "type": "string" } },
    "criteres_admission": { "type": "array", "items": { "type": "string" } },
    "stock_disponible": { "type": "number" }
  }
}
